@model GamesWebAppDB.Models.Game

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<h2>Game</h2>
<hr>
<div class="card mx-auto p-2">
    <div class="card-header">
        <h3>@Html.DisplayFor(model => model.name)</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h4><b>Genre:</b></h4>
            </div>
            <div class="col">
               <h4>@Html.DisplayFor(model => model.Genre.name)</h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4><b>Developer:</b></h4>
            </div>
            <div class="col">
               <h4>@Html.DisplayFor(model => model.developer)</h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4><b>Release Year:</b></h4>
            </div>
            <div class="col">
               <h4>@Html.DisplayFor(model => model.release)</h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4><b>Multiplayer:</b></h4>
            </div>
            <div class="col">
               <h4>@Html.DisplayFor(model => model.multiplayer)</h4>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="AllGames"><i class="fa-solid fa-circle-left"></i> Back to List</a>
        </form>
    </div>  
</div>
<hr>

